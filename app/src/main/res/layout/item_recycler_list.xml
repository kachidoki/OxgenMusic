<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:id="@+id/layout_list"
    android:background="@drawable/item_touch"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="62dp">
        <ImageView
            android:visibility="gone"
            android:id="@+id/isplay_list"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:padding="14dp"
            android:src="@drawable/icon_isplaying"
            />
        <TextView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:gravity="center"
            android:id="@+id/number_list"
            android:text="1"/>
        <LinearLayout
            android:id="@+id/playLayout_list"
            android:layout_marginLeft="8dp"
            android:layout_weight="16"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_gravity="left"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:singleLine="true"
                android:id="@+id/songname_list"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textSize="15sp"
                android:text="歌名"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:id="@+id/songername_list"
                android:text="人名"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/more_list"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:minWidth="42dp"
            android:layout_height="62dp"
            android:orientation="vertical"
            android:layout_gravity="end"
            android:gravity="center_vertical">
            <ImageView
                android:layout_marginRight="8dp"
                android:layout_gravity="right"
                android:src="@drawable/icon_more"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>
</LinearLayout>
